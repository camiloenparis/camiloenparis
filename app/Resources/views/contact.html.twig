{% extends 'layout.html.twig' %}

{% block body %}

    {{ form_start(form, {'action': path('_contact_POST'), 'method': 'POST', 'attr': {'class': 'my-form-class'}} )}}
        {{ form_errors(form) }}

        {{ form_widget(form) }}

        <input type="submit" value="Create" class="btn btn-default pull-right" />

    {{ form_end(form) }}

    <div role="main" class="main">
        <section class="page-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li><a href="{{ path('_home') }}">Home</a></li>
                            <li class="active">Contact</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <div class="container">

            <div class="row">
                <div class="col-md-6">

                    <div class="alert alert-success hidden" id="contactSuccess">
                        <strong>Success!</strong> Your message has been sent to us.
                    </div>

                    <div class="alert alert-danger hidden" id="contactError">
                        <strong>Error!</strong> There was an error sending your message.
                    </div>

                    <h2 class="mb-sm mt-sm"><strong>Contact</strong> me !</h2>

                    <form id="contactForm" action="{{ path('_contact') }}" method="POST">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-6">
                                    <label>Your name *</label>
                                    <input type="text" value="" data-msg-required="Please enter your name." maxlength="100" class="form-control" name="name" id="name" required>
                                </div>
                                <div class="col-md-6">
                                    <label>Your email address *</label>
                                    <input type="email" value="" data-msg-required="Please enter your email address." data-msg-email="Please enter a valid email address." maxlength="100" class="form-control" name="email" id="email" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label>Subject</label>
                                    <input type="text" value="" data-msg-required="Please enter the subject." maxlength="100" class="form-control" name="subject" id="subject" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label>Message *</label>
                                    <textarea maxlength="5000" data-msg-required="Please enter your message." rows="10" class="form-control" name="message" id="message" required></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="submit" value="Send Message" class="btn btn-primary btn-lg mb-xlg" data-loading-text="Loading...">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">

                    <h4 class="heading-primary mt-lg">Get in <strong>Touch</strong></h4>
                    <p>Don't be shy and drop me a line! I promise I won't keep your email or spam you with stuff.
                        I would love to hear what you have to say about this website, know more about you and
                        even meet up to have a beer or something.
                    </p>

                    <hr>

                    <h4 class="heading-primary">Some reasons to <strong>contact me</strong></h4>
                    <ul class="list list-icons list-dark mt-xlg">
                        <li><i class="fa fa-commenting-o"></i> Give me feedback about this site</li>
                        <li><i class="fa fa-briefcase"></i> Offer me a job</li>
                        <li><i class="fa fa-beer"></i> Buy me a beer</li>
                        <li><i class="fa fa-eur"></i> You just found out I am the sole heir to a huge fortune</li>
                        <li><i class="fa fa-thumbs-o-up"></i> Tell me how awesome I am!</li>
                    </ul>

                </div>

            </div>



        </div>

    </div>



{% endblock %}